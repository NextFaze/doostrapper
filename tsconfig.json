{
  "compilerOptions": {
    "lib": ["es2015.promise", "es5", "es6", "es2017.object"],
    "target": "esNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@nf-tools/dootstrapper": ["package/index.ts"]
    }
  },
  "exclude": ["cdk.out", "dist", "bazel-out", "node_modules"]
}
